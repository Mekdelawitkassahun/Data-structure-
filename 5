def merge_sort(arr):
    if len(arr) <= 1:
        return arr
    
    mid = len(arr) // 2
    left = merge_sort(arr[:mid])
    right = merge_sort(arr[mid:])
    
    return merge(left, right)

def merge(left, right):
    merged = []
    i = j = 0
    
    while i < len(left) and j < len(right):
        if left[i] < right[j]:
            merged.append(left[i])
            i += 1
        else:
            merged.append(right[j])
            j += 1
    
    while i < len(left):
        merged.append(left[i])
        i += 1
    
    while j < len(right):
        merged.append(right[j])
        j += 1
    
    return merged

sequence = input("Enter a sequence of numbers (space-separated): ").split()
sequence = [int(num) for num in sequence]
sorted_sequence = merge_sort(sequence)
print("Sorted sequence:", sorted_sequence)
search_num = int(input("Enter a number to be searched: "))

occurrences = sorted_sequence.count(search_num)
if occurrences == 0:
    print("The number", search_num, "is not present in the array.")
else:
    print("The number", search_num, "appears", occurrences, "time(s) in the array.")